<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="splashScreen.Splash"
    android:background="@drawable/splash_drf">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/CalcheckSplashScreenLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cek Kalori"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Luky Setiawan"
            android:textColor = "#eeeeee"
            android:textSize = "30sp"
            android:layout_below="@+id/CalcheckSplashScreenLogo"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
</RelativeLayout>
